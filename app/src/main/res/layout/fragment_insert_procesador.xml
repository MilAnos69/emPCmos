<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertProcesador">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="113dp"
                    android:layout_height="113dp"
                    android:src="@drawable/ic_menu_gallery" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginEnd="208dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:src="@drawable/ic_search_black_24dp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/Tb_Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:hint="Nombre"
                android:maxLength="40"
                android:inputType="textPersonName"
                android:paddingTop="15dp" />

            <EditText
                android:id="@+id/Tb_Descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="left"
                android:hint="DescripciÃ³n"
                android:inputType="textPersonName"
                android:maxLength="120"
                android:maxLines="5"
                android:paddingTop="15dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/S_Marca"
                android:layout_width="match_parent"
                android:layout_height="50dp"></androidx.appcompat.widget.AppCompatSpinner>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/S_Tipo"
                android:layout_width="match_parent"
                android:layout_height="42dp"></androidx.appcompat.widget.AppCompatSpinner>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/S_Generacion"
                android:layout_width="match_parent"
                android:layout_height="42dp"></androidx.appcompat.widget.AppCompatSpinner>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/S_Socket"
                android:layout_width="match_parent"
                android:layout_height="42dp"></androidx.appcompat.widget.AppCompatSpinner>

            <EditText
                android:id="@+id/TB_Voltaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Voltaje"
                android:inputType="number"
                android:maxLength="2" />

            <EditText
                android:id="@+id/TB_Cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Cantidad"
                android:inputType="number"
                android:maxLength="5" />

            <EditText
                android:id="@+id/TB_Valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Valor"
                android:inputType="number"
                android:maxLength="8" />

            <Button
                android:id="@+id/B_Agregar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Agregar" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>