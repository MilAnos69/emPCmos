<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertUsers">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="131dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="136dp"
                android:text="Ingrese sus datos"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <EditText
                android:id="@+id/Tb_Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Tb_Apellido"
                android:layout_marginBottom="9dp"
                android:ems="10"
                android:hint="Nombre"
                android:maxLength="40"
                android:inputType="textPersonName"
                android:paddingTop="15dp" />

            <EditText
                android:id="@+id/Tb_Apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Tb_Correo"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:hint="Apellido"
                android:maxLength="40"
                android:inputType="textPersonName"
                android:paddingTop="15dp" />

            <EditText
                android:id="@+id/Tb_Correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Tb_Usuario"
                android:layout_marginBottom="9dp"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:paddingTop="15dp" />

            <EditText
                android:id="@+id/Tb_Usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Tb_Password"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:hint="Usuario"
                android:maxLength="15"
                android:inputType="textPersonName"
                android:paddingTop="15dp" />

            <EditText
                android:id="@+id/Tb_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Tb_ConfirmarPassword"
                android:layout_marginBottom="14dp"
                android:ems="10"
                android:hint="Contraseña"
                android:maxLength="30"
                android:inputType="textPassword"
                android:paddingTop="15dp" />

            <EditText
                android:id="@+id/Tb_ConfirmarPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Tb_Telefono"
                android:layout_marginBottom="23dp"
                android:ems="10"
                android:hint="Confirmar Contraseña"
                android:maxLength="30"
                android:inputType="textPassword"
                android:paddingTop="15dp" />

            <EditText
                android:id="@+id/Tb_Telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="117dp"
                android:ems="10"
                android:hint="Telefono"
                android:maxLength="11"
                android:inputType="text|number"
                android:paddingTop="15dp" />


            <Button
                android:id="@+id/Btn_Agregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>