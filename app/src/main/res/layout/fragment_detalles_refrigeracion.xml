<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesRefrigeracion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/L_Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Tb_Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/L_Marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/Tb_Marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/L_Tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Refrigeración"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Tb_Tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/L_Socket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Socket"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TB_Socket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/L_Tamano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamaño"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TB_Tamano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/L_Voltaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltaje"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TB_Voltaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/L_Valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textColor="#97000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/TB_Valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>

</FrameLayout>